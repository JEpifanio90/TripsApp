<div layout="column">
    <md-container>
        <md-button class="md-raised md-accent" ng-click="userCtrl.newUser()" style="width: 100%;">
            <label>Create User</label>
        </md-button>
    </md-container>
    <md-list ng-cloak flex>
        <md-subheader class="md-no-sticky">Available Users</md-subheader>
        <md-list-item ng-repeat="user in userCtrl.users" ng-click="userCtrl.editUser(user)" class="noright">
            <%= image_tag("/images/{{ user.image_name }}", :class => "md-avatar") %>
            <p>{{ user.first_name }}</p>
            <p>{{ user.last_name }}</p>
            <p>{{ user.email }}</p>
            <p>{{ user.role }}</p>
            <md-icon class="md-secondary" ng-click="userCtrl.deleteUser(user)" aria-label="Chat"><i class="material-icons">delete_forever</i></md-icon>
        </md-list-item>
    </md-list>
</div>