<div>
<md-toolbar>
        <div class="md-toolbar-tools" layout="row">
            <h2 flex="95" class="md-flex">Trips Dashboard</h2>
            <md-button flex="5" ng-click="headerCtrl.openMenu()">Menu</md-button>
        </div>
    </md-toolbar>
    <md-sidenav md-component-id="rightMenu" class="md-sidenav-right" md-whiteframe="4">
        <md-toolbar>
            <h1 class="md-toolbar-tools">Manage trips/Users</h1>
            <md-content layout-padding layout="column">
                <md-button class="md-warn" ng-click="headerCtrl.openMenu()" ui-sref='trips'>
                    <md-icon class="material-icons">flight</md-icon> Trips
                </md-button>
                <md-button class="md-warn" ng-show="headerCtrl.isAdmin()" ng-click="headerCtrl.openMenu()" ui-sref='users'>
                    <md-icon class="material-icons">group</md-icon> Users
                </md-button>
                <md-button class="md-warn" ng-show="headerCtrl.isAdmin()" ng-click="headerCtrl.openMenu()" ui-sref='dashboard'>
                    <md-icon class="material-icons">public</md-icon> Explore
                </md-button>
                <md-button class="md-warn" ng-click="headerCtrl.resetEverything()" ui-sref='login'>
                    <md-icon class="material-icons">exit_to_app</md-icon> Exit
                </md-button>
            </md-content>
        </md-toolbar>
    </md-sidenav>
</div>